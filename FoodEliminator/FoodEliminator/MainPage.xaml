<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodEliminator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Food Eliminator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Log your food intake and your symtoms." FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="ingredientEntry"
                Placeholder="Add food"
                HeightRequest="100" />
        <Entry x:Name="symptomEntry"
                Placeholder="Add symptom"
                HeightRequest="100" />
        <Button Text="Click Me" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
